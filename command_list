npm install -g yarn

yarn init -y
yarn add webpack webpack-cli --dev
yarn run webpack // npm -> (npx webpack)
yarn run webpack --mode development
yarn run webpack --mode development --devtool none

// yarn run webpack --config ./webpack.dev.js  // webpack.config.js => default

yarn run webpack

yarn add --dev sass sass-loader css-loader style-loader

yarn add postcss-loader autoprefixer --dev

yarn add file-loader --dev

yarn add mini-css-extract-plugin --dev

yarn add babel-loader @babel/core @babel/preset-env --dev

// https://github.com/browserslist/browserslist
yarn add core-js@3 regenerator-runtime

yarn add eslint eslint-loader babel-eslint --dev

// https://eslint.org/docs/user-guide/configuring#specifying-environments
// https://eslint.org/docs/rules/
// yarn run eslint --init

yarn add html-webpack-plugin --dev

yarn add --dev html-loader
